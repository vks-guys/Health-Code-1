
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "User", FormMethod.Post, new { autocomplete = "off" }))
{
    <div class="container">
        <div class="row">
            <table>
                <tbody>
                    <tr>
                        <td>Mobile</td>
                        <td><input type="text" id="Mobile" name="Mobile" autocomplete="on" /></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td><input type="text" id="Email" name="Email" autocomplete="off" /></td>
                    </tr>
                    <tr>
                        <td>Password</td>
                        <td><input type="password" id="Password" name="Password" autocomplete="off" /></td>
                    </tr>
                    <tr>
                        <td>
                            <button type="submit">Register</button>
                        </td>
                        <td>
                            @Html.ActionLink("List", "List", "User")
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}