<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/css/StyleSheet.css" rel="stylesheet" />
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">
        <!-- Start top header -->
        <div class="topHeader">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">
                        <div class="logo">
                            <a href="/Admin"><img src="~/Content/images/logo.png" /></a>
                        </div>
                    </div>
                    <div class="col">
                        <ul class="menu">
                            @if (Session[HealthCode.Bussiness.DataAccess.Constants.SessionContext.IsLoggedInUser] != null)
                            {
                                <li><a href="/Dashboard">Dashboard</a></li>
                                <li><a href="/TestOrPackage">Test/Package</a></li>
                                <li><a href="/User/List">User</a></li>
                                <li><a href="/HomeCollection">Home Collection</a></li>
                                <li><a href="/Booking">Booking</a></li>
                                <li>@Html.ActionLink("Log Out", "Logout", "Admin")</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End top header -->
        @RenderBody()
    </div>


    @*@Scripts.Render("~/bundles/jquery")*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#myCarousel').carousel({
                interval: 2000
            })
            $('#testimonialSlider').carousel({
                interval: 2000
            })
        });
    </script>
</body>
</html>