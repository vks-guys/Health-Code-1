@using HealthCode.ResourceFiles

@{
    ViewBag.Title = AdminResx.AdminDashboard;
}



<style>
    .rowBorder {
        border: 1px solid #777;
        padding: 10px;
        height: 150px;
        width: 100%;
        border-radius: 25px;
    }

        /*.rowBorder div {
            margin: 68px 0;
        }*/

        .rowBorder div h2 {
            margin: 5px 0px;
            font-size: 20px;
        }

    .containerMain {
        margin: 14px 0px;
    }
</style>
<div class="container">
    <div class="containerMain">
        <div class="row">
            <h2>Dashboard</h2>
        </div>
        <div class="row">
            <div class="col-md-3">
