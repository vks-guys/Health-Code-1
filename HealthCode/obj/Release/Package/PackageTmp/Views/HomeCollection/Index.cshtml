@model IEnumerable<HealthCode.Bussiness.Entity.HomeCollectionData>

@{
    ViewBag.Title = "Home Collection";
}

<div class="container">
    <h4>Home Collection List</h4>
    <div class="row">
        <div id="CartItemDiv" class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>PhoneNumber</th>
                        <th>Preferred Date</th>
                        <th>Preffered Time</th>
                        <th>Download</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.SelectPreferredDate</td>
                                <td>@item.SelectPrefferedTime</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.FileLocation))
                                    {
                                        <a href="~/Images/HomeCollectionDocs/@item.FileLocation" download="download">Download</a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">No Records were found!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

