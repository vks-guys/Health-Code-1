@model HealthCode.Bussiness.Entity.User
@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="row">
        <h2>User Edit</h2>
    </div>
    <div class="row">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            <table>
                <tbody>
                    <tr>
                        <td>Mobile</td>
                        <td><input type="text" id="Mobile" name="Mobile" value="@Model.Mobile" /></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td><input type="text" id="Email" name="Email" value="@Model.Email" /></td>
                    </tr>
                    <tr>
                        <td>
                            <button type="submit">Update</button>
                        </td>
                        <td>
                            @Html.ActionLink("List", "List", "User")
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>
